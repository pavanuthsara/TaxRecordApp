# Stage 1: Build the Angular app
FROM node:18 AS build
WORKDIR /usr/src/app
COPY taxrecordapp.client/package*.json ./
RUN npm install
COPY taxrecordapp.client/ .
RUN npm run build -- --configuration production

# Stage 2: Serve the app with Nginx
FROM nginx:alpine
COPY --from=build /usr/src/app/dist/taxrecordapp.client/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
